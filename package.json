{
  "name": "pw_ts_project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node run-tests.js",
    "test:debug": "cucumber-js --format progress-bar --format json:allure-results/cucumber.json --format html:Reports/cucumber-html/cucumber-report.html",
    "test:html": "node run-tests.js && npm run allure:generate",
    "allure:generate": "npx allure generate allure-results --clean -o Reports/allure-report/output && echo ✅ Allure report generated",
    "allure:serve": "npx allure serve Reports/allure-report/output --port 4040",
    "test:report": "npm run test:html && npm run allure:generate",
    "test:allure": "npm run test:html && npm run allure:serve",
    "clean:reports": "rmdir /s /q allure-results Reports\\cucumber-html Reports\\allure-report 2>nul || true && mkdir allure-results Reports\\cucumber-html Reports\\allure-report && echo ✅ Reports cleaned"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sureshkumarnagineni/PlayWright_TS_Cucumber.git"
  },
