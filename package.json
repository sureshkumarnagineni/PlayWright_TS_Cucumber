  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.58.2",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^2.10.0",
    "properties-reader": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
